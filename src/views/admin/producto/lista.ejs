<%- include('../template/head'); %>
    <%- include('../template/navAdmin'); %>
        <div class="container">
            <ul class="nav nav-pills d-flex justify-content-center mt-2" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home"
                        type="button" role="tab" aria-controls="home" aria-selected="true">Lista de productos</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile"
                        type="button" role="tab" aria-controls="profile" aria-selected="false">Agregar producto</button>
                </li>
            </ul>
            <div class="row">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab"
                        tabindex="0">
                        <table id="tabla" class="col-12 mt-5 table table-hover">
                            <thead>
                                <th class="col-1 text-center">ID</th>
                                <th class="col-3 text-center">Titulo</th>
                                <th class="col-3 text-center">Precio</th>
                                <th class="col-3 text-center">IMAGEN</th>
                                <th class="col-2 text-center">Acción</th>
                            </thead>
                            <tbody>
                                <% productos.forEach((productos)=> { %>
                                    <tr class="table-primary">
                                        <td class="col-1 text-center">
                                            <%= productos.id %>
                                        </td>
                                        <td class="col-3 text-center">
                                            <%= productos.titulo %>
                                        </td>
                                        <td class="col-3 text-center">$<%= productos.precio %>
                                        </td>
                                        <td class="col-3">
                                            <div class="tabla-imagen">
                                                <img src="../../../public/imagen/<%=productos.imagen %>" alt="">
                                                <a href="editarImagen/<%= productos.id %>"><i class="fa-regular fa-pen-to-square"></i></a>
                                            </div>
                                        </td>
                                        <td class="col-2">
                                            <a href="/admin/editar/<%= productos.id%>" class="btn btn-success col-12" ><i class="fa-regular fa-pen-to-square"></i></a>
                                            <a onclick="confirmar('<%= productos.id %>')" class="btn btn-danger col-12"><i class="fa-regular fa-trash-can"></i></a>
                                        </td>
                                    
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <div class="tab-pane fade " id="profile" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
                        <div class="d-flex justify-content-center">
                            <div class="col-4">
                                <form action="/admin/subir" enctype="multipart/form-data" method="post">
                                    <div class="form-group my-3">
                                        <input type="text" class="form-control" name="titulo" id="titulo"
                                            placeholder="Titulo">
                                    </div>
                                    <div class="form-group my-3">
                                        <textarea class="form-control" name="descripcion" id="descripcion" cols="30"
                                            rows="10" placeholder="Descripción"></textarea>
                                    </div>
                                    <div class="form-group my-3">
                                        <input type="number" class="form-control" name="precio" id="precio"
                                            placeholder="Precio">
                                    </div>
                                    <div class="form-group my-3">
                                        <input type="file" class="form-control" name="imagen" id="imagen">
                                    </div>
                                    <button type="submit" class="btn btn-success" id="btn_crear" name="btn_crear"
                                        value="Crear">Crear</button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


<%- include('../template/footer') %>
<script src="/public/jquery.js"></script>
<script src="/public/datatables.js"></script>
    <script>
        $(document).ready( function () {
            $('#tabla').DataTable();
        } );
    </script>

    <script>
        const triggerTabList = document.querySelectorAll('#myTab button')
        triggerTabList.forEach(triggerEl => {
            const tabTrigger = new bootstrap.Tab(triggerEl)

            triggerEl.addEventListener('click', event => {
                event.preventDefault()
                tabTrigger.show()
            })
        })
        
        function confirmar(id){

            Swal.fire({
                title:`Estas a punto de eliminar el registro  N°${id}?`,
                showCancelButton: true,
                confirmButtonText: 'Eliminar',
                cancelButtonText: `Cancelar`,
                confirmButtonColor: '#d9534f',
                cancelButtonColor: '#4bbf73' 
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location = '/admin/eliminar/'+id
                } else if (result.isDenied) {
                    Swal.fire('Changes are not saved', '', 'info')
                }
            })
        }

        function editarImagen(id){
        Swal.fire({
            input: 'file',
            customClass:  {
                input: 'form-control'
            }   
            
            
        }).then((result) => {
            if (result.isConfirmed) {
                window.location = '/admin/editarImagen/'+id
            } else if (result.isDenied) {
                Swal.fire('Changes are not saved', '', 'info')
            }
        })
        }
        
    </script>

