<%- include('../template/head') %>
<%- include('../template/navAdmin') %>
<div class="container d-flex justify-content-center text-center">
    <form action="/admin/editar"  method="post"  style="width:50%; background: #eaeaea;" class="mt-2 px-5 py-2 ">
        <% producto.forEach((producto) => { %>
            <form action="/admin/editar"  method="post">
                <input type="hidden" name="id" id="id" value="<%= producto.id %>">
                <div class="form-group my-3">
                    <input type="text" class="form-control" name="titulo" id="titulo"
                        value="<%= producto.titulo %>">
                </div>
                <div class="form-group my-3">
                    <textarea class="form-control" name="descripcion" id="descripcion" cols="30"
                        rows="10" ><%= producto.descripcion %></textarea>
                </div>
                <div class="form-group my-3">
                    <input type="number" class="form-control" name="precio" id="precio"
                        value="<%= producto.precio %>">
                </div>
                <button type="submit" class="btn btn-success" id="btn_crear" name="btn_crear"
                    value="Crear">Editar</button>
            </form>
        <% }); %>
    </form>
</div>





